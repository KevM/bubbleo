  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Simple Example",
      "type": "go",
      "debugAdapter": "dlv-dap",
      "request": "attach",
      "mode": "remote",
      "remotePath": "${workspaceFolder}/examples/simple",
      "port": 2345,
      "host": "127.0.0.1",
      "preLaunchTask": "Run simple headless dlv" // Here !
    },
    {
        "name": "Attach to Deeper Example",
        "type": "go",
        "debugAdapter": "dlv-dap",
        "request": "attach",
        "mode": "remote",
        "remotePath": "${workspaceFolder}/examples/deeper",
        "port": 2345,
        "host": "127.0.0.1",
        "preLaunchTask": "Run deeper headless dlv" // Here !
      }
  ]
