// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run simple headless dlv",
      "type": "process",
      "command": ["dlv"],
      "args": [
        "debug",
        "--headless",
        "--listen=:2345",
        "--api-version=2",
        "${workspaceFolder}/examples/simple/main.go"
      ],
      "isBackground": true,
      "problemMatcher": {
        "owner": "go",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^couldn't start listener:" // error if matched
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^API server listening at:",
          "endsPattern": "^Got a connection, launched process" // success if matched
        }
      }
    },
    {
      "label": "Run deeper headless dlv",
      "type": "process",
      "command": ["dlv"],
      "args": [
        "debug",
        "--headless",
        "--listen=:2345",
        "--api-version=2",
        "${workspaceFolder}/examples/hosted/main.go"
      ],
      "isBackground": true,
      "problemMatcher": {
        "owner": "go",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^couldn't start listener:" // error if matched
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^API server listening at:",
          "endsPattern": "^Got a connection, launched process" // success if matched
        }
      }
    }
  ]
}
